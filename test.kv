### Classes Dinamicas ###
<BtnCntrlVsn@Button>:
	background_color: 255, 255, 255, 1
	bold: True
	color: 0, 0, 0, 1

<LbLBlck@Label>:
	background_color: 0, 0, 0, 0
	bold: True

<LbLDcpln@Label>:
	background_color: 0, 0, 0, 0
	bold: True
	size_hint: None, None
	size: self.texture_size

<BgColor@Widget>:
	background_color: 1, 1, 1, 1
	canvas.before:
		Color:
			rgba: root.background_color
		Rectangle:
			size: self.size
			pos: self.pos

<AccrdnTm@AccordionItem>:
	background_normal: 'LblNrm.png'
	background_selected: 'LblSlctd.png'

<LbLCntrlVsn@Label+BgColor>:
	background_color: 1, 1, 1, 1
	color: 0, 0, 0, 1

<LbLCntrlVsnNts@Label>:
	size_hint: None, None

<TxtNpt@TextInput>:
	multiline: False
	write_tab: False
    background_color: 0, 0, 0, 0
    cursor_color: 1, 1, 1, 1
    foreground_color: 1, 1, 1, 1

<Chck@CheckBox>:
	group: 'g2'
	size_hint: (None, 1)

<BxLyt@BoxLayout>:
	orientation:'vertical'
	padding: 50
	spacing: 10

<Img@Image>:
	source: 'edu-icon.png'
	size_hint_y: None
	height: 200
	allow_stretch: True

<Img2@Image>:
	source: 'icon.png'
	size_hint_y: None

<BxLytPpP@BoxLayout>:
	orientation: 'vertical'
	padding: 5, 5, 5, 5
<LblBxLytPpP@Label>:
	color: 1, 1, 1, 1
	center_x: root.center_x
	center_y: root.center_y
<BxLytPpP2@BoxLayout>:
	size_hint: 1, 0.6
<BtnPpP@Button>:
	background_color: 0.4, 0.4, 0.4, 0.1
	text: 'Voltar'

<PpP@Popup>:
	title: 'Encaminhando e-mail'
	title_color: 1, 1, 1, 1
	auto_dismiss: False
	size: 500, 200
	size_hint: None, None
	###background: 'atlas://data/images/defaulttheme/button_disabled'
	separator_color: 0.4, 0.4, 0.4, 1
	title_align: 'center'

<AtnSgr@PpP>:
	BxLytPpP:
		LblBxLytPpP:
			text: 'Setor Administrativo estrara em contato assim que possivel'
		BxLytPpP2:
			BtnPpP:
				on_press: root.dismiss()
				on_release: app.root.current = 'menu'

<CdstrUser@PpP>:
	BxLytPpP:
	    LblBxLytPpP:
	        text: 'Encaminhando e-mail para confirmar o cadastro'
	    BxLytPpP2:
			BtnPpP:
				on_press: root.dismiss()
				on_release: app.root.current = 'menu'

<RcvrPass@PpP>:
